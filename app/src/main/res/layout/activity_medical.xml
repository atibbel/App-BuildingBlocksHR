            app:layout_constraintTop_toBottomOf="@+id/paramedical" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/paramedical_2"
            app:layout_constraintStart_toStartOf="@+id/textView22"
            app:layout_constraintTop_toBottomOf="@+id/textView22" />

        <TextView
            android:id="@+id/orthopedic_shoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/orthopedic_shoes_heading"
            android:textColor="@color/indigo"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/paramedical"
            app:layout_constraintTop_toBottomOf="@+id/textView23" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/orthopedic_shoe_amount"
            app:layout_constraintStart_toStartOf="@+id/textView23"
            app:layout_constraintTop_toBottomOf="@+id/orthopedic_shoes" />

        <TextView
            android:id="@+id/orthotic_mold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/orthotic_mold_heading"
            android:textColor="@color/indigo"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/orthopedic_shoes"
