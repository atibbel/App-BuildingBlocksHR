            app:layout_constraintTop_toBottomOf="@+id/textView29" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/Optometrist_amount"
            app:layout_constraintStart_toStartOf="@+id/textView29"
            app:layout_constraintTop_toBottomOf="@+id/Optometrist" />

        <TextView
            android:id="@+id/coverage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/coverage_heading"
            android:textColor="@color/indigo"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/Optometrist"
            app:layout_constraintTop_toBottomOf="@+id/textView30" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/coverage_age"
            app:layout_constraintStart_toStartOf="@+id/textView30"
            app:layout_constraintTop_toBottomOf="@+id/coverage" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Need to make a claim? Choose a form below."
            android:textColor="#4CAF50"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/coverage"
            app:layout_constraintTop_toBottomOf="@+id/textView31" />

        <TextView
            android:id="@+id/form1"
            android:layout_width="94dp"
            android:layout_height="22dp"
            android:layout_marginTop="20dp"
            android:onClick="form1"
            android:text="Health Form 1"
            android:textColor="@color/lightblue"
            app:layout_constraintStart_toStartOf="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            tools:ignore="MissingConstraints,OnClick" />

        <TextView
            android:id="@+id/form2"
            android:layout_width="94dp"
            android:layout_height="22dp"
            android:layout_marginTop="10dp"
            android:onClick="form2"
            android:text="Health Form 2"
            android:textColor="@color/lightblue"
            app:layout_constraintStart_toStartOf="@+id/form1"
            app:layout_constraintTop_toBottomOf="@+id/form1"
            tools:ignore="MissingConstraints,OnClick" />

        <TextView
            android:id="@+id/form3"
            android:layout_width="94dp"
            android:layout_height="22dp"
            android:layout_marginTop="10dp"
