            android:fontFamily="@font/poppins_light"
            android:text="@string/prescription"
            app:layout_constraintStart_toStartOf="@+id/Prescriptions"
            app:layout_constraintTop_toBottomOf="@+id/Prescriptions" />

        <TextView
            android:id="@+id/deductible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/deductible"
            android:textColor="@color/indigo"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/Prescriptions"
            app:layout_constraintTop_toBottomOf="@+id/textView19" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/deductible_1"
            app:layout_constraintStart_toStartOf="@+id/deductible"
            app:layout_constraintTop_toBottomOf="@+id/deductible" />

        <TextView
            android:id="@+id/hospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/hospital_heading"
            android:textColor="@color/indigo"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/deductible"
            app:layout_constraintTop_toBottomOf="@+id/textView20" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/hospital_1"
            app:layout_constraintStart_toStartOf="@+id/textView20"
            app:layout_constraintTop_toBottomOf="@+id/hospital" />

        <TextView
            android:id="@+id/paramedical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/paramedical_heading"
            android:textColor="@color/indigo"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/hospital"
            app:layout_constraintTop_toBottomOf="@+id/textView21" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/paramedicl_1"
