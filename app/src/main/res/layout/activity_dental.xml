<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MedicalActivity">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/poppins_light"
            android:text="HR in your Hands"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#3F51B5"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="70dp"
            android:layout_height="56dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.018"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/colored_blocks" />

        <TextView
            android:id="@+id/slogan"
            android:layout_width="106dp"
            android:layout_height="22dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppins_light"
            android:text="HR on demand."
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#131419"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/textView"
            app:layout_constraintHorizontal_bias="0.425"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/dental"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:text="Health"
            android:textColor="#4CAF50"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.072"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.188" />

        <TextView
            android:id="@+id/deductible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/deductible"
            android:textColor="@color/indigo"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/dental"
            app:layout_constraintTop_toBottomOf="@+id/dental" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/deductible_1"
            app:layout_constraintStart_toStartOf="@+id/deductible"
            app:layout_constraintTop_toBottomOf="@+id/deductible" />

        <TextView
            android:id="@+id/annual_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/annual_limit_heading"
            android:textColor="@color/indigo"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/deductible"
            app:layout_constraintTop_toBottomOf="@+id/textView1" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/annual_limit_amount"
            app:layout_constraintStart_toStartOf="@+id/textView1"
            app:layout_constraintTop_toBottomOf="@+id/annual_limit" />

        <TextView
            android:id="@+id/prevention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/prevention_heading"
            android:textColor="@color/indigo"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/annual_limit"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/prevention_amount"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/prevention" />

        <TextView
            android:id="@+id/maximum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/maximum_heading"
            android:textColor="@color/indigo"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/prevention"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/maximum_amount"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/maximum" />

        <TextView
            android:id="@+id/emergency_travel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/emergency_travel_heading"
            android:textColor="@color/indigo"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/maximum"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/emergency_travel"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/emergency_travel" />

        <TextView
            android:id="@+id/oral_exam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/oral_exam_heading"
            android:textColor="@color/indigo"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/emergency_travel"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/oral_exam_amount"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/oral_exam" />

        <TextView
            android:id="@+id/xray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/xray_heading"
            android:textColor="@color/indigo"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/emergency_travel"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/xray_amount"
            app:layout_constraintStart_toStartOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/xray" />

        <TextView
            android:id="@+id/coverage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/coverage_heading"
            android:textColor="@color/indigo"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/xray"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/coverage_age"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/coverage" />

        <TextView
            android:id="@+id/form1"
            android:layout_width="94dp"
            android:layout_height="22dp"
            android:layout_marginTop="10dp"
            android:onClick="form1"
            android:text="Form 1"
            android:textColor="@color/lightblue"
            app:layout_constraintStart_toStartOf="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            tools:ignore="MissingConstraints,OnClick" />

        <TextView
            android:id="@+id/form2"
            android:layout_width="94dp"
            android:layout_height="22dp"
            android:layout_marginTop="10dp"
            android:onClick="form2"
            android:text="Form 2"
            android:textColor="@color/lightblue"
            app:layout_constraintStart_toStartOf="@+id/form1"
            app:layout_constraintTop_toBottomOf="@+id/form1"
            tools:ignore="MissingConstraints,OnClick" />

        <TextView
            android:id="@+id/form3"
            android:layout_width="94dp"
            android:layout_height="22dp"
            android:layout_marginTop="10dp"
            android:onClick="form3"
            android:text="Form 3"
            android:textColor="@color/lightblue"
            app:layout_constraintStart_toStartOf="@+id/form2"
            app:layout_constraintTop_toBottomOf="@+id/form2"
            tools:ignore="MissingConstraints,OnClick" />

        <TextView
            android:id="@+id/form4"
            android:layout_width="94dp"
            android:layout_height="22dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:onClick="form4"
            android:text="Form 4"
            android:textColor="@color/lightblue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/form3"
            app:layout_constraintTop_toBottomOf="@+id/form3"
            tools:ignore="MissingConstraints,OnClick" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Need to make a claim? Choose a form below."
            android:textColor="#4CAF50"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/coverage"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

